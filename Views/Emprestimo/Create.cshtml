@model SistemaBiblioteca.Models.Emprestimo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Emprestimo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class ="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LivroId" class="control-label"></label>
                <select asp-for="LivroId" class ="form-control" asp-items="ViewBag.LivroId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DataInicioEmprestimo" class="control-label"></label>
                <input asp-for="DataInicioEmprestimo" class="form-control" />
                <span asp-validation-for="DataInicioEmprestimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFimEmprestimo" class="control-label"></label>
                <input asp-for="DataFimEmprestimo" class="form-control" />
                <span asp-validation-for="DataFimEmprestimo" class="text-danger"></span>
            </div>
